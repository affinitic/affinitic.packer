{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=fr_FR.UTF-8 <wait>",
        "auto <wait>",
        "locale=fr_FR <wait>",
        "kbd-chooser/method=fr <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=affinitic.be <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=fr <wait>",
        "keyboard-configuration/xkb-keymap=fr <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": false,
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "db79d463072da26b91c14e08b5a77a77bec9476ad1e5b0d2241228e4d59233f12c74477e77d427e407e1f45da4d2414c76367554352f57480fc7c00dde164028",
      "iso_checksum_type": "sha512",
      "iso_url": "http://cdimage.debian.org/cdimage/release/7.4.0/amd64/iso-cd/debian-7.4.0-amd64-netinst.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vm_name": "affinitic",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    },
  ],
  "post-processors": [
    {
      "output": "debian-7.4.0-amd64_virtualbox.box",
      "type": "vagrant",
      "only": ["virtualbox-iso"]
    },
    {
      "output": "debian-7.4.0-amd64_vmware.box",
      "type": "vagrant",
      "only": ["vmware-iso"]
    }
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/virtualbox.sh",
            "scripts/vagrant.sh",
            "scripts/ruby.sh",
            "scripts/puppet.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/vagrant.sh",
            "scripts/ruby.sh",
            "scripts/chef.sh",
            "scripts/cleanup.sh"
          ]
        }
      },
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/ruby.sh",
        "scripts/puppet.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
    }
  ]
}
